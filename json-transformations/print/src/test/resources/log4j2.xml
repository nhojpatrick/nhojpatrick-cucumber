<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" packages="com.github.nhojpatrick.cucumber.json.transformations.print">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %l %m%n"/>
        </Console>
        <InMemoryAppender name="InMemoryAppender">
            <PatternLayout pattern="%m%n"/>
        </InMemoryAppender>
    </Appenders>
    <Loggers>
        <Logger name="com.github.nhojpatrick.cucumber.json.transformations.print" level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="InMemoryAppender"/>
        </Logger>
        <Logger name="com.github.nhojpatrick" level="info">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
